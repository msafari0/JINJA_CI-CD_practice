<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=0.8">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.7.0/chart.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"/>
    <title>Chart with Modified Data</title>
</head>
<body>

<canvas id="myChart"></canvas>

<script>
    // Use triple curly braces to prevent Jinja from escaping characters
    const jsonData = {{ dataframe | load_csv_data | tojson | safe }};


    const ctx = document.getElementById('myChart').getContext('2d');

    // Extract the columns you want to plot
    const nodes = jsonData['{{ Lx_axis }}'].map(String);
    const data1 = jsonData['{{ Lcolumn_name }}'];
    //const data2 = jsonData['{{ Lcomponent }}'];
    
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: nodes,
            datasets: [
                {
                    label: '{{ Lcolumn_name }}',
                    data: data1,
                    backgroundColor: 'rgba(0, 255, 0, 0.7)',
                },
               // {
                 //   label: '{{ Lcomponent }}',
                   // data: data2,
                   // backgroundColor: 'rgba(0, 0, 255, 0.7)',
               // },
            ],
        },
        options: {
            scales: {
                x: {
                    stacked: true
                },
                y: {
                    stacked: true
                }
            }
        },
    });
</script>
</body>
</html>

